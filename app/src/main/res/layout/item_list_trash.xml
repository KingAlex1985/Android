<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <FrameLayout
        android:id="@+id/trash_image_state_container"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/trash_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_image_placeholder_square" />


        <ImageView
            android:layout_gravity="right"
            android:id="@+id/trash_state_icon"
            android:layout_marginTop="5dp"
            android:layout_width="30dp"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_trash_status_clean" />
    </FrameLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/trash_image_state_container"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/trash_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bratislava region"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/trash_types"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bratislava region"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/trash_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="a year ago"
            android:textColor="@color/text_color_grey"
            android:textSize="@dimen/text_size_small" />

    </LinearLayout>

</RelativeLayout>