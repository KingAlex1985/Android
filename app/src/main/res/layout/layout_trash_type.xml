<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal"
    grid:layout_columnWeight="1"
    grid:layout_gravity="fill_horizontal">

    <me.trashout.ui.SelectableImageButton
        android:id="@+id/trash_type_icon"
        android:layout_width="@dimen/trash_type_circle_button_size"
        android:layout_height="@dimen/trash_type_circle_button_size"
        android:background="@drawable/trash_circle_button"
        android:scaleType="centerInside"
        android:src="@drawable/btn_trash_type_household"
        app:sibBackgroundSelectedColor="@color/background_trash_type_household" />


    <TextView
        android:id="@+id/trash_type_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="10dp"
        android:text="Liquid"
        android:textColor="@color/text_color_grey" />

</LinearLayout>